{
  "compilerOptions": {
    "declaration": true,
    "target": "ES6",
    "module": "ESNext",
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node"],
    "lib": ["ES2020", "DOM"]
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src", "tests"]
}

{
  "name": "gentrace-node",
  "description": "Monorepo for Gentrace Node.js packages",
  "repository": "git@github.com:gentrace/gentrace-node.git",
  "author": "Gentrace",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "commitlint": "commitlint --edit",
    "lintstaged": "lint-staged",
    "changeset:add": "changeset",
    "changeset:version": "changeset version",
    "changeset:release": "pnpm run build --filter \"@gentrace/*\" && changeset publish",
    "changeset:next": "changeset pre enter next",
    "changeset:normal": "changeset pre exit"
  },
  "lint-staged": {
    "**/*.{ts,tsx,json}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@gentrace/tsconfig": "workspace:*",
    "@manypkg/cli": "^0.21.0",
    "eslint": "^8.48.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "prettier": "^3.0.3",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.7.0"
}
